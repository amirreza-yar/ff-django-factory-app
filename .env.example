# =====================================
# FlashingFactory Temp Backend - Environment Variables
# =====================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# =====================================
# DJANGO CORE SETTINGS
# =====================================

# Django Secret Key (generate a new one for production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=django-insecure-change-this-in-production-to-a-random-secret-key

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1

# =====================================
# DATABASE CONFIGURATION
# =====================================

# Database URL (PostgreSQL recommended for production)
# Format: postgresql://username:password@host:port/database
# For development with SQLite, you can omit this (defaults to db.sqlite3)
DATABASE_URL=postgresql://flashingfactory:your_password@localhost:5432/flashingfactory

# =====================================
# REDIS CONFIGURATION
# =====================================

# Redis URL for caching and sessions
# Format: redis://[:password]@host:port/db_number
REDIS_URL=redis://127.0.0.1:6379/1

# =====================================
# EMAIL CONFIGURATION
# =====================================

# Email backend (use console for development, smtp for production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP Email Settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# Default from email address
DEFAULT_FROM_EMAIL=noreply@flashingfactory.com

# =====================================
# ANYMAIL CONFIGURATION (Mailgun, SendGrid, etc.)
# =====================================

# Mailgun API Key (get from Mailgun dashboard)
MAILGUN_API_KEY=your-mailgun-api-key

# Mailgun Sender Domain (configured in Mailgun)
MAILGUN_SENDER_DOMAIN=your-domain.com

# =====================================
# SECURITY SETTINGS
# =====================================

# HTTPS/SSL Redirect (set to True in production)
SECURE_SSL_REDIRECT=False

# HSTS (HTTP Strict Transport Security) settings
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Security headers
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# CSRF Trusted Origins (comma-separated URLs)
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =====================================
# LOGGING CONFIGURATION
# =====================================

# Logging levels (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=DEBUG
DJANGO_LOG_LEVEL=INFO

# =====================================
# FRONTEND INTEGRATION
# =====================================

# Frontend URL for email links and redirects
FRONTEND_URL=http://localhost:3000

# Site name for emails and branding
SITE_NAME=FlashingFactory

# =====================================
# DEVELOPMENT OVERRIDES
# =====================================

# Override HTTPS settings for development
# SECURE_SSL_REDIRECT=False

# =====================================
# OPTIONAL SETTINGS
# =====================================

# Admin URL prefix (change from default for security)
# ADMIN_URL_PREFIX=admin/

# Session settings
# SESSION_COOKIE_AGE=1209600  # 2 weeks in seconds
# SESSION_COOKIE_SECURE=False  # Set to True with HTTPS

# CORS settings (additional origins if needed)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com
